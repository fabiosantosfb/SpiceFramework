<?xml version="1.0" encoding="utf-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    cacheTokens="false"
    colors="true"
    converErrorsToExceptions="true"
    converNoticesToExceptions="true"
    converWarningsToExceptions="true"
    processIsolation="true"
    stopOnFailure="true"
    syntaxCheck="false"
    verbose="false"
    bootstrap="../conf/bootstrap.php">
    <testsuites>
        <testsuite name="Spice">
            <directory>.</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>../src</directory>
        </whitelist>
    </filter>
	<logging>
		<log type="coverage-html" target="./log/report" charset="UTF-8"
			yui="true" highlight="true" lowUpperBound="50" highLowerBound="80" />
		<log type="testdox-text" target="php://stdout" />
	</logging>
	<php>
	    <env name="MYSQL_HOST" value="localhost"></env>
	    <env name="MYSQL_DBNAME" value="spice"></env>
	    <env name="MYSQL_PSWD" value=""></env>
	    <env name="MYSQL_USER" value="root"></env>
	</php>
</phpunit>
